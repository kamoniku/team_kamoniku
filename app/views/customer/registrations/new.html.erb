<div class='container mt-3'>
  <div class='row'>
    <div class="col-9 mx-auto">
      <h3 class="mb-5">新規会員登録</h3>
      
      <%= form_with model:@customer, url: customer_registration_path, local: true do |f| %>
        <%= render "customer/shared/error_messages", resource: resource %>
          <div class="form-group row">
            <label class= "col-4">名前</label>
            <div class="col-3"><%= f.text_field :last_name, autofocus: true, placeholder: "山田" %></div>
            <div class="col-3"><%= f.text_field :first_name, autofocus: true, placeholder: "太郎" %></div>
          </div>

           <div class="form-group row">
            <label class= "col-4">フリガナ</label>
            <div class="col-3"><%= f.text_field :last_name_ruby, autofocus: true, placeholder: "ヤマダ" %></div>
            <div class="col-3"><%= f.text_field :first_name_ruby, autofocus: true, placeholder: "タロウ" %></div>
          </div>

          <div class="form-group row">
            <label class= "col-4">メールアドレス</label>
            <div class="col-3"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
            <div class="col-3"></div>
          </div>

          <div class="form-group row">
            <label class= "col-4">郵便番号（ハイフンなし）</label>
            <div class="col-3"><%= f.text_field :post_code, autofocus: true %></div>
          </div>

          <div class="form-group row">
            <label class= "col-4">住所</label>
            <div class="col-8"><%= f.text_field :address, autofocus: true %></div>
          </div>

          <div class="form-group row">
            <label class= "col-4">電話番号（ハイフンなし）</label>
            <div class="col-3"><%= f.text_field :telephone_number, autofocus: true %></div>
          </div>

           <div class="form-group row">
            <label class= "col-4">パスワード（６文字以上）</label>
            <div class="col-3"><%= f.password_field :password, autocomplete: "current-password" %></div>
          </div>

           <div class="form-group row">
            <label class= "col-4">パスワード（確認用）</label>
            <div class="col-3"><%= f.password_field :password, autocomplete: "current-password" %></div>
          </div>

          <!-- 退会ステータスの真偽値引き渡し -->
　　　　　<%= f.hidden_field :is_deleted, value: "false" %>

           <div class="form-group row">
            <label class= "col-4"></label>
            <div class="col-3"><%= f.submit "新規登録", class:"btn btn-dark" %></div>
          </div>
        <% end %>
      
      <h5 class="mt-5">既に登録済みの方</h5>
      <p class="offset-1"><%=link_to "こちら", new_customer_session_path %>からログインしてください</p>
     </div>
  </div>
</div>