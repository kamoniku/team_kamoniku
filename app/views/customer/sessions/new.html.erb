<div class='container'>
  <div class='row'>
    <div class="col-lg-2" "col-xl-2">
      <h2><div class="public_login">Log in</div></h2>
     </div>
  </div>

  <div class='row'>
    <div class="col-md-1"></div>
    <div class="col-md-5"><h3><div class="public_login">会員の方はこちらからログイン</div></h3></div>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

       <div class="form-group row">
        <div class="col-md-2"></div>
        <label class="col-md-2">メールアドレス</label>
        <div class="col-md-5"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
        <div class="col-md-2"></div>
      </div>

       <div class="form-group row">
        <div class="col-md-2"></div>
        <label class="col-md-2">パスワード</label>
        <div class="col-md-5"><%= f.password_field :password, autocomplete: "current-password" %></div>
        <div class="col-md-2"></div>
      </div>

       <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-2"></div>
        <div class="col-md-5"><%= f.submit "ログイン", class:"box_login" %></div>
        <div class="col-md-2"></div>
      </div>

  <% end %>

  <div class='row'>
    <div class="col-md-1"></div>
    <div class="col-md-5"><h3><div class="public_login">会員登録がお済みで無い方</div></h3></div>
  </div>

  <div class='row'>
    <div class="col-md-2"></div>
    <div class="col-md-4">
      <p><%= link_to "こちら", new_customer_registration_path %>から新規登録を行ってください</p>
    </div>
  </div>

</div>

