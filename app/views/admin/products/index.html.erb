<div class="container mt-3">
  <div class="d-flex justify-content-between my-3 px-3">
    <h3>商品一覧</h3>
    <%= link_to new_admin_product_path do %>
      <i class="far fa-plus-square fa-2x"></i>
    <% end %>
  </div>
  <table class="table border-bottom">
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <th><%= product.id %></th>
          <td>
            <%= link_to admin_product_path(product) do %>
              <%= product.name %>
            <% end %>
          </td>
          <td><%= product.price %></td>
          <td><%= product.category.name %></td>
          <% if product.is_sold %>
            <td class="text-success">販売中</td>
          <% else %>
            <td class="text-muted">販売停止中</td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>