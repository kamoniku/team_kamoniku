<%= form_with(model:[:admin, product], local: true) do |f| %>
  <table class="table table-borderless">
    <tbody>
      <tr>
        <td><%= f.label :image, "商品画像" %></td>
        <td><%= f.attachment_field :image %></td>
      </tr>
      <tr>
        <td><%= f.label :name, "商品名" %></td>
        <td><%= f.text_field :name, placeholder: "商品名", class:"form-control" %></td>
      </tr>
      <tr>
        <td><%= f.label :discription, "商品説明" %></td>
        <td><%= f.text_area :discription, rows:"4", placeholder: "ここに説明文を記述します", class:"form-control" %></td>
      </tr>
      <tr>
        <td><%= f.label :category_id, "ジャンル" %></td>
        <td><%= f.collection_select :category_id, Category.all, :id, :name, prompt:"--選択してください--", class:"form-control" %></td>
      </tr>
      <tr>
        <td><%= f.label :price, "税抜価格" %></td>
        <td>
          <div class="form-inline">
            <%= f.text_field :price, placeholder: "1000", class:"form-control" %>円
          </div>
        </td>
      </tr>
      <tr>
        <td><%= f.label :is_sold, "販売ステータス" %></td>
        <td>
          <%= f.radio_button :is_sold, true %>
          <%= f.label :is_sold, "販売中", {value: true, style: "display: inline-block;"} %>
          <%= f.radio_button :is_sold, false %>
          <%= f.label :is_sold, "販売停止中", {value: false, style: "display: inline-block;"} %>
        </td>
      </tr>
    </tbody>
  </table>
  <%= f.submit button_text, class:"btn btn-success" %>
<% end %>