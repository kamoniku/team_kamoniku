<div class='container'>
  <div class='row'>
    <div class="col-lg-3" "col-xl-3">
      <h3><div class="heading">管理者ログイン</div></h3>
    </div>
  </div>

  <div class='row'>
    <div class="col-lg-3" "col-xl-3"></div>
    <div class="col-lg-6" "col-xl-6">

      <div  align="center">

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <table class="login_table">
            <thead>
              <tr>
                <th>メールアドレス</th>
                <th><%= f.email_field :email, autofocus: true, autocomplete: "email", class:"login_box" %></th>
              </tr>
              <tr>
                <th>パスワード</th>
                <th><%= f.password_field :password, autocomplete: "current-password", class:"login_box2" %></th>
              </tr>
              <tr>
                <th>
                  <% if devise_mapping.rememberable? %>
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  <% end %>
                </th>
              </tr>
              <tr>
                <th></th>
                <th>
                  <%= f.submit "ログイン", class:"box_login" %>
                </th>
              </tr>
            </thead>
          </table>
        <% end %>

        <%= render "admin/shared/links" %>
      </div>
    </div>
    <div class="col-lg-3" "col-xl-3"></div>
  </div>
</div>
