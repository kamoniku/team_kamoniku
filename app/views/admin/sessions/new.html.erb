<div class='container mt-3'>
  <div class='row'>
    <div class="col-9 mx-auto">
      <h3>管理者ログイン</h3>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <table class="table table-borderless offset-1">
          <thead>
            <tr>
              <th width="200" class="text-right">メールアドレス</th>
              <th width="500"><%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control-sm" %></th>
            </tr>
            <tr>
              <th class="text-right">パスワード</th>
              <th><%= f.password_field :password, autocomplete: "current-password", class:"form-control-sm" %></th>
            </tr>
            <tr>
              <th></th>
              <th>
                <% if devise_mapping.rememberable? %>
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                <% end %>
              </th>
            </tr>
            <tr>
              <th></th>
              <th>
                <%= f.submit "ログイン", class:"btn btn-dark" %>
              </th>
            </tr>
          </thead>
        </table>
      <% end %>
      <%= render "admin/shared/links" %>
    </div>
  </div>
</div>
