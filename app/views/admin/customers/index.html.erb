<div class='container mt-3'>
  <div class='row'>
    <div class="col-10 mx-auto">
      <div class="col-lg-2 col-xl-2 mb-3">
        <h5><span class="heading">会員一覧</span></h5>
      </div>
      <table class='table'>
        <thead class="heading">
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td>
                <%= link_to admin_customer_path(customer.id) do %>
                  <%= customer.full_name %>
                <% end %>
              </td>
              <td><%= customer.email %></td>
              <% if customer.is_deleted %>
                <td class="text-muted">退会</td>
              <% else %>
                <td class="text-success">有効</td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>

      <%= paginate @customers %>
    </div>
  </div>
</div>