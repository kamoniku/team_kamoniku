<div class="container mt-3">
  <div class="row">
    <h5>
      <span class="heading">注文履歴詳細</span>
    </h5>
    <table class="table table-sm table-borderless">
      <thead>
        <tr>
          <th width="20%"></th>
          <th width="90%"></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th><strong>購入者</strong></th>
          <td>
            <%= link_to admin_customer_path(@order.customer) do %>
              <%= @order.customer.full_name %>
            <% end %>
          </td>
        </tr>
        <tr>
          <th><strong>注文日</strong></th>
          <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
        </tr>
        <tr>
          <th><strong>配送先</strong></th>
          <td>
            <%= "〒#{@order.post_code.insert(3, '-')} #{@order.address}" %><br>
            <%= @order.address_name %>
          </td>
        </tr>
        <tr>
          <th><strong>支払い方法</strong></th>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <th><strong>注文ステータス</strong></th>
          <td>
            <%= form_with(model: [:admin, @order], local: true) do |f| %>
              <div class="form-inline">
                <%= f.select :status, Order.statuses_i18n.invert, {}, class:"form-control-sm" %>
                <%= f.submit "更新", class:"btn btn-success btn-sm ml-3" %>
              </div>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="row  d-flex align-items-end">
    <div class="col-9">
      <table class="table">
        <thead class="heading">
          <tr>
            <th width="30%">商品名</th>
            <th width="20%">単価（税込）</th>
            <th width="10%">数量</th>
            <th width="10%">小計</th>
            <th width="30%">製作ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @order.order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.product.name %></td>
            <td><%= order_detail.product.price.to_s(:delimited) %></td>
            <td><%= order_detail.quantity %></td>
            <td><%= order_detail.price %></td>
            <td>
              <%= form_with(model:[:admin, @order, order_detail], local: true) do |f| %>
                <div class="form-inline">
                  <%= f.select :making_status, OrderDetail.making_statuses_i18n.invert, {}, class:"form-control-sm" %>
                  <%= f.submit "更新", class:"btn btn-success btn-sm ml-2"%>
                </div>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-3">
      <table class="table table-borderless">
        <tdody>
          <tr>
            <th>商品合計</th>
            <td align="right"><%= @order.order_details.sum(:price).to_s(:delimited) %>円</td>
          </tr>
          <tr>
            <th>送料</th>
            <td align="right"><%= @order.postage.to_s(:delimited) %>円</td>
          </tr>
          <tr>
            <th>請求金額合計</th>
            <td class="font-weight-bold" align="right"><%= @order.total_price.to_s(:delimited) %>円</td>
          </tr>
        </tdody>
      </table>
    </div>
  </div>