<div class="container mx-auto mt-3">
  <h3>注文履歴一覧</h3>
  <table class="table">
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <th><%= order.created_at %></th>
          <th><%= order.name %></th>
          <th><%= order.order_details.sum(:quantity) %></th>
          <th><%= order.statuses_i18n_invert %></th>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>