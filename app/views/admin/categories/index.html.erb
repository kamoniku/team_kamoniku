<div class="container mt-3">
  <h3>ジャンル一覧・追加</h3>
  <%= render 'layouts/validation', instance: @category %>
  <%= render 'form', category: @category, submit: @submit %>
  <div class="row mt-5">
    <div class="col-5 mr-auto">
      <table class="table border-bottom" >
        <thead align="center">
          <tr>
            <th width="20%">ジャンル</td>
            <th width="10%"></td>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= category.name %></td>
              <td>
                <%= link_to "編集する", edit_admin_category_path(category), class:"btn btn-dark btn-sm" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>