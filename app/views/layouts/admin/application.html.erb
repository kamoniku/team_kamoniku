<!DOCTYPE html>
<html>
  <head>
    <title>Naganocake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <div class="col-3">
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav d-flex flex-wrap small">
                  <%= render "layouts/admin_signed" %>
                </ul>
              </div>
            </div>

            <div class="col-6 text-center">
              <%= link_to "Nagano Cake", public_root_path, class:"navbar-brand outfit-100" %>
            </div>

            <div class="col-3">
              <%= form_with url: admin_searches_search_path, method: :get, local: true, class:"d-flex ml-auto" do |f| %>
                <%= f.search_field :keyword, placeholder: "Search", value: @keyword, class:"form-control-sm" %>
                <%= f.select :model, [ ["商品","product"], ["注文","order"], ["顧客","customer"] ], class:"form-control-sm" %>
                <%= f.submit "Search", class:"btn btn-outline-secondary btn-sm ml-2" %>
              <% end %>
            </div>

          </div>
      </nav>
    </header>
    <%= yield %>
    <footer class="text-center my-3">
      ©︎DMM WEB CAMP - team.kamoniku
    </footer>
  </body>
</html>
