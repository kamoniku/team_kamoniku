<div class="container">
  <div class="row">
    <%= render 'products/category' category: @category %>
    <div>
      <%= attachment_image_tag %>
      <h4><%= @product.name %></h4>
      <%= @product.discription %>
      <strong><%= @product.tax_in_price %></strong>(税込)
      <%= form_with model: @cart_item, class:"form-inline" |f| do %>
        <%= f.hidden_field :product_id, value: @product.id %>
        <%= f.select :quantity, *[1..3] %>
      <% end %>
    </div>
  </div>
</div>

