<div class="container mt-3">
  <div class="row">
    <div class="col-md-9 mx-auto">
      <!--ジャンル検索窓のテンプレート-->
      <%= render 'public/products/category', categories: @categories %>
      <h3 class="mt-3"><%= @category_name %>一覧<small> (全<%= @products.count %>件)</small></h3>
        <%= render 'index', products: @products %>
        <%= paginate @products %>
      </div>
    </div>
  </div>
</div>