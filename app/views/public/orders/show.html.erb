<% provide(:title, "注文履歴詳細") %>

<h2>注文履歴詳細</h2>
<div calss="row">
  <% if @order.present? %>
    <div class="col-xs-6">
    	<strong>注文情報</strong>
  	    <table class="table">
          <tbody>
              <tr>
                <th>注文日</th>
          	  <td class="text-left"><%= @order.created_at.strftime('%Y/%m/%d') %></td>
              </tr>
              <tr>
              　<th class="info">配送先</th>
                <td class="text-left"><%= @order.postal_code %><br>
                	  <%= @order.address %><br>
                	  <%= @order.name %>
                </td>
              </tr>
              <tr>
              　<th class="info">支払方法</th>
                <td class="text-left"><%= @order.payment_method %></td>
              </tr>
              <tr>
                <th class="info">ステータス</th>
                <td class="text-left"><%= @order.order_status %></td>
              </tr>
          </tbody>
        </table>
    </div>

    <div class="col-xs-6">
      <strong>請求情報</strong>
        	<table class="table">
            <tr>
              <th>商品合計</th>
              <td class="text-right"><%= total_price(@order_details) %>円</td>
            </tr>
            <tr>
              <th>配送料</th>
              <td class="text-right"><%= @order.postage %>円</td>
            </tr>
            <tr>
              <th>ご請求金額</th>
              <td class="text-right"><%= @order.total_price %>円</td>
            </tr>
        </table>
    </div>
    <div class="col-xs-6">
    	<strong>注文内容</strong>
        <table class="table">
        	<thead>
  	      <tr>
  	      	<th>商品</th>
  	        <th>単価(税込)</th>
  	      	<th>個数</th>
  	      	<th>小計</th>
  	      </tr>
        	</thead>
        	<tbody>
        	<% order_details.each do |order_detail| %>
            <tr>
  	        <td><%= order_detail.products.name %></td>
  	        <td class="text-right"><%= price(order_detail) %>円</td>
  	        <td class="text-right"><%= quantity(order_detail) %>個</td>
  	        <td class="text-right"><%= total_price(@orders) %>円</td>
            </tr>
          <% end %>
          </tbody>
        </table>
    </div>
    <% if customer_sign_in? %>
      <%= link_to "注文履歴一覧へ戻る", public_order_path, class: "btn btn-info btn-lg order-index-back" %>
    <% else %>
      <%= link_to "会員詳細へ戻る", public_customer_path, class: "btn btn-info order-index-back" %>
    <% end %>
  <% else %>
    <p>注文履歴がありません。</p>
  <% end %>
</div>