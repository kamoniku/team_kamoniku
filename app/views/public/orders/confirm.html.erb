<div class="container">
  <h5>
    <span class="heading">　注文情報確認　</span>
  </h5>
  <div class="row">
    <table class="table table-bordered col-md-8">
      <thead class="heading">
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= attachment_image_tag cart_item.product, :image, size:"80x60" %>
              <strong><%= cart_item.product.name %></strong>
            </td>
            <td class="align-middle">
              <%= cart_item.product.tax_in_price %>
            </td>
            <td class="align-middle">
              <%= cart_item.quantity %>
            </td>
            <td class="align-middle">
              <%= cart_item.subtotal %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <table class="table table-bordered col-md-3 ml-5">
      <tr>
        <td class="heading">送料</td>
        <td><%= @postage %></td>
      </tr>
      <tr>
        <td class="heading">商品合計</td>
        <td><%= @total_price %></td>
      </tr>
      <tr>
        <td class="heading">請求金額</td>
        <td><%= @postage + @total_price %></td>
      </tr>
    </table>
  </div>
  <div class="row">
    <div class="col-md-2">
      <strong>支払方法</strong>
    </div>
    <span><%= Order.payment_methods_i18n[:"#{@payment_method}"] %></span>
  </div>
  <div class="row">
    <div class="col-md-2">
      <strong>お届け先</strong>
    </div>
    <div class="col-md-8 pl-0">
      <p><%= "〒#{@order.post_code}" + ' ' + @order.address %></p>
      <p><%= @order.address_name %></p>
    </div>
  </div>

  <div class="col-md-2 offset-md-5">
    <%= form_with(model:@order, url:public_orders_path, method: :post, local: true) do |f| %>
      <%= f.hidden_field :payment_method, value: Order.payment_methods[:"#{@payment_method}"] %>
      <%= f.submit "注文を確定する", class:"btn btn-success mx-auto"%>
    <% end %>
  </div>
</div>