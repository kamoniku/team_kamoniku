<div class="container mt-4">
  <p>ショッピングカート</p>
  <%= link_to "カートを空にする", public_cart_items_path, method: :delete, class:"btn btn-danger" %>
  <table class="table">
    <thead>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </thead>
    <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td>
            <%= attachment_image_tag product, :image, size:"80x60" %>
            <%= cart_item.product.name %>
          </td>
          <td><%= cart_item.product.tax_in_price %></td>
          <td>
            <%= form_with model: @cart_items, method: :patch, class:"form-inline" %>
              <%= f.select :quantity, *[1..3] %>
              <%= f.submit "変更" class:"btn btn-success" %>
            <% end %>
          </td>
          <td>
            <%= cart_item.subtotal %>
          </td>
          <td>
            <%= link_to "削除する", public_cart_item_path(cart_item.id), method: :delete class:"btn btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="d-flex">
    <div class="col-offset-1">
      <%= link_to "買い物を続ける", public_root_path, class:"btn btn-primary" %>
    </div>
    <div class="price-box">合計金額</div>
    <div class="price-box"><%= @total_price %></div>
    <%= link_to "情報入力に進む", new_public_order_path, class:"btn btn-success text-center" %>
  </div>
</div>