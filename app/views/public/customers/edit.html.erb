<div class="container mt-3">
  <div class="row">
    <div class="col-12">
  
      <h3 class="mb-3">登録情報編集</h3>
  
      <%= form_with(model:@customer, url:public_customers_path, local: true ,method: :put) do |f| %>
  
        <div class="col-xs-10">
          <div class="form-group col-xs-12">
            <%= f.label :"氏名", class: "col-sm-3 control-label" %>
            <%= f.text_field :last_name, class: "last_name col-sm-3 form-control-static name" %>
            <%= f.text_field :first_name, class: "first_name col-sm-3 form-control-static name" %>
          </div>
          <div class="form-group col-xs-12">
            <%= f.label :"フリガナ", class: "col-sm-3 control-label" %>
            <%= f.text_field :last_name_ruby, class: "kana_last_name col-sm-3 form-control-static name" %>
            <%= f.text_field :first_name_ruby, class: "kana_first_name col-sm-3 form-control-static name" %>
          </div>
          <div class="form-group col-xs-12">
            <%= f.label :"メールアドレス", class: "col-sm-3 control-label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-6 form-control-static" %>
          </div>
          <div class="form-group col-xs-12">
            <%= f.label :"郵便番号", class: "col-sm-3 control-label" %>
            <%= f.text_field :post_code, class: "col-sm-4 form-control-static" %>
          </div>
          <div class="form-group col-xs-12">
            <%= f.label :"住所", class: "col-sm-3 control-label" %>
            <%= f.text_field :address, class: "col-sm-7 form-control-static" %>
          </div>
          <div class="form-group col-xs-12">
            <%= f.label :"電話番号(ハイフンなし)", class: "col-sm-3 control-label" %>
            <%= f.text_field :telephone_number, class: "col-sm-4 form-control-static" %>
          </div>
        </div>
  
        <div class="actions col-xs-9 col-xs-offset-3">
          <%= f.submit "編集内容を保存する", class: "btn btn-dark save col-xs-6" %>
          <%= link_to '退会する', public_customers_unsubscribe_path, class: "glyphicon glyphicon-tint btn btn-danger"%>
        </div>
      <% end %>
      <h3></h3>
      <div class="col-xs-12">
        <%= link_to "戻る", public_customers_path, class: "glyphicon glyphicon-home btn btn-light" %>
      </div>
    </div>
  </div>
</div>