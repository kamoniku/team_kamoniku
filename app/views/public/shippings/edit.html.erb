<div class="container mt-3">
    <div class="row">
        <div class="col-9 mx-auto">
            <h3>配送先編集</h3>

            <%= form_with(model: @shipping, url:public_shipping_path, local: true, method: :patch) do |f| %>
            <!--%= form_with model:[:public, @shipping], local:true, method: patch do |f| %>-->
            <!--%= form_with model: @shipping, local:true, method: patch do |f| %>-->
            <!--%= form_with model: @shipping, url: public_shipping_path(@shipping.id), method: :patch, local:true do |f| %>-->

                <div class="form-group col-3">
                    <%= f.label :"郵便番号(ハイフンなし)" %>
                    <%= f.text_field :post_code, class: "form-control-sm" %>
                </div>

                <div class="form-group col-12">
                    <%= f.label :"住所" %>
                    <%= f.text_field :address, class: "form-control-sm" %>
                </div>

                <div class="form-group col-3">
                    <%= f.label :"宛名" %>
                    <%= f.text_field :address_name, class: "form-control-sm" %>
                </div>
                <div class="form-group col-2">
                    <%= f.submit '更新する', class:"btn btn-dark" %>
                </div>
            <% end %>
            <%= link_to "配送先登録/一覧へ戻る", public_shippings_path, class:"col-3" %>
        </div>
    </div>
</div>

